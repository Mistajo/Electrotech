{% extends "themes/base_user.html.twig" %}

{% block title %}Espace client
{% endblock %}

{% block description %}ElectroTech, entreprise de ecommerce spécialisée dans la vente de produits electroménagers.
{% endblock %}

{% block keywords %}ElectroTech, Qui sommes-nous, Produits électroménagers, Curseur de riz, Machine à laver
{% endblock %}

{% block main %}
	<div class="container my-2">

		<!-- Breadcrumb-->
		{# <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb" class='mx-5 my-4'>
																																																																																									<ol class="breadcrumb">
																																																																																										<li class="breadcrumb-item">
																																																																																											<a href="{{path('user.home.index')}}">Tableau de bord</a>
																																																																																										</li>
																																																																																										<li class="breadcrumb-item active" aria-current="page">Vos adresses</li>
																																																																																									</ol>
																																																																																								</nav> #}
		<!-- Fin Breadcrumb-->

		<!-- Titre de la page-->
			<h1 class="text-center my-3 display-5"> Modifier cette adresse
		</h1>
		<!-- Fin Titre de la page-->

		<!-- Formulaire d'ajout d'une nouvelle adresse-->
		<div class="col-md-12 d-flex justify-content-center align-items-center">
			{{ form_start(form) }}

			<!-- Prenom et nom -->
			<div class="row">
				<div class="col-md-6">
					<div class="mb-3">
						<label for="">Prenom :</label>
						<div class="text-danger">{{ form_errors(form.firstName) }}</div>
						{{ form_widget(form.firstName,{'attr':{'class': 'form-control'}}) }}
					</div>
				</div>
				<div class="col-md-6">
					<div class="mb-3">
						<label for="">Nom :</label>
						<div class="text-danger">{{ form_errors(form.lastName) }}</div>
						{{ form_widget(form.lastName,{'attr':{'class': 'form-control'}}) }}
					</div>
				</div>
			</div>
			<!-- Fin Prenom et nom -->

			<!-- Adresse -->
			<div class="mb-3">
				<label for="">Adresse :</label>
				<div class="text-danger">{{ form_errors(form.address) }}</div>
				{{ form_widget(form.address,{'attr':{'class': 'form-control'}}) }}
			</div>
			<!-- Fin Adresse -->

			<!-- Telephone et Ville -->
			<div class="row">
				<div class="col-md-6">
					<div class="mb-3">
						<label for="">Numero de téléphone :</label>
						<div class="text-danger">{{ form_errors(form.phone) }}</div>
						{{ form_widget(form.phone,{'attr':{'class': 'form-control'}}) }}
					</div>
				</div>
				<div class="col-md-6">
					<div class="mb-3">
						<label for="">Ville :</label>
						<div class="text-danger">{{ form_errors(form.city) }}</div>
						{{ form_widget(form.city,{'attr':{'class': 'form-control'}}) }}
					</div>
				</div>
			</div>
			<!-- Fin Telephone et Ville -->

			<!-- Pays et Code postal -->
			<div class="row">
				<div class="col-md-6">
					<div class="mb-3">
						<label for="">Pays :</label>
						<div class="text-danger">{{ form_errors(form.country) }}</div>
						{{ form_widget(form.country,{'attr':{'class': 'form-control'}}) }}
					</div>
				</div>
				<div class="col-md-6">
					<div class="mb-3">
						<label for="">Code Postal :</label>
						<div class="text-danger">{{ form_errors(form.postalCode) }}</div>
						{{ form_widget(form.postalCode,{'attr':{'class': 'form-control'}}) }}
					</div>
				</div>
			</div>
			<!-- Fin Pays et Code postal -->

			<!-- Compagny et Complement adresse -->
			<div class="row">
				<div class="col-md-6">
					<div class="mb-3">
						<label for="">Compagny :</label>
						<div class="text-danger">{{ form_errors(form.compagny) }}</div>
						{{ form_widget(form.compagny,{'attr':{'class': 'form-control'}}) }}
					</div>
				</div>
				<div class="col-md-6">
					<div class="mb-3">
						<label for="">Complement Adresse :</label>
						<div class="text-danger">{{ form_errors(form.Complement) }}</div>
						{{ form_widget(form.Complement,{'attr':{'class': 'form-control'}}) }}
					</div>
				</div>
			</div>
			<!-- Fin Compagny et Complement adresse -->

			<!-- Adresse par defaut -->
			<div class="row">
				<div class="mb-3">
					{{ form_widget(form.defaultAddress) }}
					<label for="">Faire de cette adresse mon adresse par défaut</label>
					<div class="text-danger">{{ form_errors(form.defaultAddress) }}</div>
				</div>
			</div>
			<!-- Fin Adresse par defaut -->

			<!-- Bouton de validation du formulaire -->
			<div class="mb-3">
				<input formnovalidate type="submit" class="btn btn-primary" value="Modifier">
			</div>
			<!-- Fin Bouton de validation du formulaire -->


			{{ form_end(form) }}
		</div>
		<!-- Fin Formulaire d'ajout d'une nouvelle adresse-->

	</div>

{% endblock %}
