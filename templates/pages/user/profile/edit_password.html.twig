{% extends "themes/base_user.html.twig" %}

{% block title %}Espace client
{% endblock %}

{% block description %}ElectroTech, entreprise de ecommerce spécialisée dans la vente de produits electroménagers.
{% endblock %}

{% block keywords %}ElectroTech, Qui sommes-nous, Produits électroménagers, Curseur de riz, Machine à laver
{% endblock %}

{% block main %}
	<div
		class="container my-2">

		<!-- Titre de la page-->
		<h1 class="text-center my-3 display-5">Modification du mot de passe :
			{{app.user.firstName}}</h1>
		<!-- Fin Titre de la page-->

		<!-- Formulaire de modification du prénom et du nom-->
		<div class="col-md-6 mx-auto shadow p-4">
			{{form_start(form)}}
			<div>
				<p>Utilisez le formulaire ci-dessous pour modifier le mot de passe de votre compte.</p>
			</div>

			<div class="mb-3">
				<label for="edit_password_form_currentPassword">Mot de passe actuel</label>
				<div class="text-danger">{{form_errors(form.currentPassword)}}</div>
				{{form_widget(form.currentPassword, {'attr': {'class':'form-control'}})}}
			</div>
			<div class="mb-3">
				<label for="edit_password_form_password_first">Nouveau mot de passe</label>
				<div class="text-danger">{{form_errors(form.password.first)}}</div>
				{{form_widget(form.password.first, {'attr': {'class':'form-control'}})}}
			</div>
			<div class="mb-3">
				<label for="edit_password_form_password_second">Confirmation du nouveau mot de passe</label>
				<div class="text-danger">{{form_errors(form.password.second)}}</div>
				{{form_widget(form.password.second, {'attr': {'class':'form-control'}})}}
			</div>
			<div>
				<input formnovalidate type="submit" class="btn btn-primary" value="Enregistrer les modification">
			</div>
			{{form_end(form)}}
		</div>

		<!-- Fin Formulaire de modification du mot de passe-->
	</div>
{% endblock %}
