{% extends "themes/base_user.html.twig" %}

{% block title %}Espace client
{% endblock %}

{% block description %}ElectroTech, entreprise de ecommerce spécialisée dans la vente de produits electroménagers.
{% endblock %}

{% block keywords %}ElectroTech, Qui sommes-nous, Produits électroménagers, Curseur de riz, Machine à laver
{% endblock %}

{% block main %}
	<div
		class="container my-2">

		<!-- Titre de la page-->
		<h1 class="text-center my-3 display-5">Modification du prénom et nom :
			{{app.user.firstName}}</h1>
		<!-- Fin Titre de la page-->

		<!-- Formulaire de modification du prénom et du nom-->
		<div class="col-md-6 mx-auto shadow p-4 d-flex justify-content-center align-items-center my-5">
			{{ form_start(form) }}
			<div>
				<p>Si vous voulez changer le nom associé à votre compte client, vous pouvez le faire ci-dessous. N'oubliez pas de cliquer sur le bouton Enregistrer les modifications quand vous avez terminé.</p>
			</div>

			<div class="row">
				<div class="col-md-6">
					<div class="mb-3">
						<label for="">
							<strong>Nouveau Prénom :</strong>
						</label>
						<div class="text-danger">{{ form_errors(form.firstName) }}</div>
						{{ form_widget(form.firstName, { 'attr': {'class': 'form-control'} }) }}
					</div>
				</div>
				<div class="col-md-6">
					<div class="mb-3">
						<label for="">
							<strong>Nouveau Nom :</strong>
						</label>
						<div class="text-danger">{{ form_errors(form.lastName) }}</div>
						{{ form_widget(form.lastName, { 'attr': {'class': 'form-control'} }) }}
					</div>
				</div>
			</div>
			<div>
				<input formnovalidate type="submit" class="btn btn-primary" value="Enregistrer les modification">
			</div>
			{{ form_end(form) }}
		</div>
		<!-- Fin Formulaire de modification du prénom et du nom-->
	</div>
{% endblock %}
