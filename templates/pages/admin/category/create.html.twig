{% extends "themes/base_admin.html.twig" %}

{% block title %}Espace client
{% endblock %}

{% block description %}ElectroTech, entreprise de ecommerce spécialisée dans la vente de produits electroménagers.
{% endblock %}

{% block keywords %}ElectroTech, Qui sommes-nous, Produits électroménagers, Curseur de riz, Machine à laver
{% endblock %}

{% block jquery%}
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

{% endblock %}

{% block main %}
	<div
		class="container my-2">

		<!-- Titre de la page -->
		<h1 class="text-center my-3 display-5">Nouvelle Categorie</h1>
		<!-- Fin Titre de la page -->

		<!-- Formulaire d'ajout d'une nouvelle adresse-->
		<div class=" d-flex justify-content-center align-items-center shadow my-5">
			{{ form_start(form) }}
			<!-- nom -->
			<div class="mb-3 mt-3">
				<label for="">Nom :</label>
				<div class="text-danger">{{ form_errors(form.name) }}</div>
				{{ form_widget(form.name,{'attr':{'class': 'form-control'}}) }}
			</div>
			<!-- nom -->

			<!-- Adresse -->
			<div class="mb-3">
				<label for="">Description :</label>
				<div class="text-danger">{{ form_errors(form.description) }}</div>
				{{ form_widget(form.description,{'attr':{'class': 'form-control'}}) }}
			</div>
			<!-- Fin Adresse -->


			<div class="mb-3">
				<input formnovalidate type="submit" class="btn btn-primary" value="Créer">
			</div>


			{{ form_end(form) }}
		</div>
		<!-- Fin Formulaire d'ajout d'une nouvelle adresse-->


	</div>
{% endblock %}
